{
    "manifest_version": 3,
    "name": "Wordle Stats",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "128": "square.png"
    },
    "description": "See how many words are left to guess from.",
    "version": "0.0.0.1",
    "content_scripts": [
        {
            "matches": [
                "https://www.powerlanguage.co.uk/wordle/*"
            ],
            "all_frames": true,
            "js": [
                "index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "https://www.powerlanguage.co.uk/wordle/"
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "options.js",
                "code.js",
                "options.html"
            ],
            "matches": [
                "https://www.powerlanguage.co.uk/*"
            ]
        }
    ]
}